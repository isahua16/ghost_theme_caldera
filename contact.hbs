{{!< default}}
<div class="gh-page">
    <div class="gh-container">
        <div class="other-page-heading">
            <h1>Contact us</h1>
            <p>We're excited to meet you!</p>
        </div>
        <div class="contact-blog-container">
            <img
                class="contact-image"
                src="{{asset '/images/team.webp'}}"
                alt=""
            />
        </div>

        <form
            class="gh-form-container"
            action="https://formspree.io/f/meqbwppb"
            method="POST"
        >

            <input
                class="gh-input"
                type="email"
                name="email"
                placeholder="Email"
                required
            />

            <textarea
                placeholder="Message"
                cols="30"
                rows="10"
                class="gh-textarea"
                name="message"
                required
            ></textarea>

            <!-- your other form fields go here -->
            <button
                class="send-button gh-button gh-button-large"
                type="submit"
            >Send</button>
        </form>

    </div>
</div>