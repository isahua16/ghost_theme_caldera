{{!< default}}
    <div class="gh-page">
        <div class="gh-container">
            <div class="other-page-heading">
            <h1>Blog</h1>
            <p>Find out about our journey</p>
            </div>
            <div class="blog-container">
            <img
                class="blog-image"
                src="{{asset '/images/raccoon.png'}}"
                alt="Image of a the raccoon character from the game The Rabbit Haul being attacked by a bee"
            />
            </div>
            <div class="gh-postfeed">
    
                {{#foreach posts}}

                    {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}

                {{/foreach}}
        
            </div>

            {{!-- If JS isn't enabled, fallback to standard pagination --}}
            <noscript>
                <div class="gh-pagination">
                    {{pagination}}
                </div>
            </noscript>
        </div>
    </div>
